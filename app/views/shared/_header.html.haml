%section#top-header.row
  %h1.col-md-2
    .header-title
      = link_to "MYFLIX", home_path
  - if current_user    
    %ul.col-md-4.clearfix.menu-item
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
  - else
    %ul.col-md-4.clearfix
      %li= link_to "Register", register_path

  .col-md-5.for-search
    = form_tag search_videos_path, :method => 'get' do 
      = text_field_tag :search_term, nil, class: 'form-control', placeholder: 'Search for videos'
      = submit_tag "Search", :class => 'btn'
  #user_links.pull-right
    %ul
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          - if current_user    
            Welcome, #{current_user.name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", logout_path

